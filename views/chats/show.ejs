<% include ../partials/header %>

<h1><%= chat.name %></h1>

<p><%= chat.description %></p>

<p>
    <a href="/chats/<%= chat._id %>/comments/new">Add New Comment</a>
</p>

<% chat.comments.forEach(function(comment) { %>
    <p>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }) %>    

<% include ../partials/footer %>