<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <div id="edit_chat">
            <h1>Edit "<%= chat.name %>"</h1>
            <form action="/chats/<%= chat._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="chat[name]" value="<%= chat.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="chat[description]" value="<%= chat.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/chats">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>